<Window x:Class="Shopping_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_list"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Name="Heading">
            <TextBlock FontSize="64" Foreground="#134371" HorizontalAlignment="Center" FontWeight="SemiBold">SHOPPING LIST</TextBlock>
        </StackPanel>
        <StackPanel Name="Body" Orientation="Vertical">
            <ListBox Name="ShoppingList" HorizontalAlignment="Stretch" MouseDoubleClick="UpdateSelectedItem">
                
            </ListBox>
            <StackPanel Name="Form" Orientation="Horizontal">
                <TextBox Name="newItem" Width="600"></TextBox>
                <Button Click="addItem">Add item</Button>
                <Button Click="editItem">Edit item</Button>
                <Button Click="removeItem">Delete item</Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
